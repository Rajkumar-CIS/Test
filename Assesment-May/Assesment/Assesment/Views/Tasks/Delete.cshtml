@model Assesment.Models.Tasks

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Task</h1>

<h3>Are you sure you want to delete this task?</h3>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Task Details</h4>
        <dl class="row">
            <dt class="col-sm-3">
                Title:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-3">
                Description:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-3">
                Due Date:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DueDate)
            </dd>
            <dt class="col-sm-3">
                Attachment:
            </dt>
            <dd class="col-sm-9">
                @if (Model.AttachmentsType == AttachmentType.Img)
                {
                    <img src="@Model.Material" alt="Attachment" width="40px" height="40px" />
                }
                else
                {
                    <img src="/Uploads/google-docs.png" alt="Attachment" width="40px" height="40px" />
                }
            </dd>
            <dt class="col-sm-3">
                Attachment Type:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.AttachmentsType)
            </dd>
            <dt class="col-sm-3">
                Created Date:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TaskCreatedDate)
            </dd>
            <dt class="col-sm-3">
                Created By:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TaskCreatedBy)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
