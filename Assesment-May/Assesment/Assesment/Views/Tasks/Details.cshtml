@model Assesment.Models.Tasks

@{
    ViewData["Title"] = "Details";
}

<h1>Task Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">
            Title:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-3">
            Description:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-3">
            Due Date:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DueDate)
        </dd>
        <dt class="col-sm-3">
            Attachment:
        </dt>
        <dd class="col-sm-9">
            @if (Model.AttachmentsType == AttachmentType.Img)
            {
                <img src="@Model.Material" alt="Attachment" width="40px" height="40px" />
            }
            else
            {
                <img src="/Uploads/google-docs.png" alt="Attachment" width="40px" height="40px" />
            }
        </dd>
        <dt class="col-sm-3">
            Attachment Type:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.AttachmentsType)
        </dd>
        <dt class="col-sm-3">
            Created Date:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TaskCreatedDate)
        </dd>
        <dt class="col-sm-3">
            Created By:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TaskCreatedBy)
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ID">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
